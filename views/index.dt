extends base

block body
	- import model: prediction;
	- void predList(prediction[] preds)
		ul
			- foreach(i,pred; preds)
				li
					// TODO nice date and percentage formatting
					a(href="/p/#{pred.id}") #{pred.statement}
					span(class="chance") #{round(pred.chance * 100)}%
					time(class="end") #{pred.closes}
	h2 Active Predictions
	- predList(active);
	h2 Predictions to Settle
	- predList(toSettle);
