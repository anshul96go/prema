extends base

block body
	table
		tr
			th wealth
			td #{user.wealth}â‚¬
	h2 Active Predictions
		ul
			- foreach (pred; predsActive)
				li
					a(href="/p/#{pred.id}") #{pred.statement}
	h2 Closed Predictions
		ul
			- foreach (pred; predsClosed)
				li
					a(href="/p/#{pred.id}") #{pred.statement}
	h2 Change Username
		form(method="POST")
			input(type="text", name="new_name", value="#{user.name}", size=12)
			button Change

